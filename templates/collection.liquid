  #office-pack-photo { background-color: #d7e1fe; }
  #men-pack-photo { background-color:  #fad7b0; }
  #cas-pack-photo { background-color: #fbdce8; }
  #womens-pack-photo { background-color: #fbfcbf; }
  #caslite-pack-photo { background-color: #e5f4fa; }
  #officelite-pack-photo { background-color: #d9f8eb; }
  #laceless-pack-photo { background-color: #c8faf8; }
  #couples-pack-photo { background-color: #fcd4c6; }
  #shoe-pack-photo { background-color: #d1fad9; }
  .collection-wrapper .page-title { 
    background-image: url("{{'6.jpg' | asset_url}}"); 
    background-size: contain;
    background-repeat: no-repeat;
}
.product-row { 
  margin: 30px 0; 
  align-items: flex-start;
}
  .accent-lifestyle {
    margin: 10px;
    max-width: 35%;
    object-fit: cover;
  }

  .product-collection-wrapper { 
    margin: 10px; 
    border: 2px solid whitesmoke;
  }
  .product-collection-wrapper img { width: 100%; }
  .color-preview-circle { 
    height: 15px;
    width: 15px;
    border-radius: 100%;
    margin-right: 2px;
    display: inline-block;
   }
  .rose { background-color: #F7CAC9; }
  .green { background-color: #00A68C; }
  .blue { background-color: #0E3A53; }
  .beige { background-color: #F9F2ED; }
  .black { background-color: #000; }
  @media only screen and (min-width: 1100px) and (max-width: 1400px) {
    .product-collection-wrapper .accent-padding {
      height: 235px;
      display: flex;
      flex-direction: column;
      flex-flow: wrap;
      padding: 10px;
    }
  }
  @media only screen and (min-width: 589px) and (max-width: 799px) {
    .collection-wrapper .page-title h1 { 
      margin-top: 0; 
      font-size: 38pt; 
    }
  }
  @media only screen and (min-width: 800px) {
    .collection-wrapper .page-title { background-position: bottom right;}
  }
  @media only screen and (max-width: 799px) {
    .collection-wrapper .page-title { background-position: bottom;}
    .collection-wrapper .page-title h1 { text-align: center; }
  }
  .asfe { align-self: flex-end; }
  .page-title { min-height: 225px; }
</style>

