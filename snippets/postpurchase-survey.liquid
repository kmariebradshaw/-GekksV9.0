<script>
      $('#post-purchase-stores li').click(function() {
        $(this).toggleClass('chosen').siblings().removeClass('chosen')
      })
      $('#post-purchase-submit').click(function() {
        let organizedStores = $(this).parent().find('.chosen').attr("id")
        if (organizedStores != "Other") {
          ga('send', 'event', 'Shoe Shop', organizedStores);
        }
        else {
          let otherInput = $(this).parent().find('.chosen').find('input').val()
          ga('send', 'event', 'Shoe Shop', otherInput);
        }
        $(this).parent().hide(); 
      })
      $('#post-purchase-submit-reason').click(function() {
        let primeReason = $(this).parent().find('.chosen').attr("id")
        if (primeReason != "Other") {
          ga('send', 'event', 'Reason', primeReason);
        }
        else {
          let otherInput = $(this).parent().find('.chosen').find('input').val()
          ga('send', 'event', 'Reason', otherInput);
        }
        $(this).parent().hide(); 
      })
    </script>
